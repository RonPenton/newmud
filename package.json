{
    "name": "generalmud",
    "version": "0.0.1",
    "description": "A MUD for Node and Websockets",
    "main": "./build/server/index.js",
    "scripts": {
        "watch": "nodemon",
        "start": "ts-node-script -T -r dotenv-json2/config ./src/server/index.ts",
        "go": "node ./build/index.js",
        "build": "npm-run-all clean build-server build-client copy-data",
        "clean": "rimraf ./build",
        "build-server": "tsc --project ./src/server/tsconfig.json",
        "build-client": "webpack --config ./src/client/webpack.config.js",
        "copy-data": "npm-run-all copy-foundation copy-css copy-ejs",
        "copy-foundation": "copyfiles -u 4 ./node_modules/foundation-sites/dist/css/foundation.min.css ./build/public",
        "copy-css": "copyfiles -u 2 ./src/client/**/*.css ./build/public",
        "copy-ejs": "copyfiles -u 3 ./src/client/views/**/*.ejs ./build/views",
        "copy-require": "copyfiles -u 2 ./node_modules/requirejs/require.js ./build/public",
        "test": "jest",
        "initial-load": "ts-node -r dotenv-json2/config ./bin/data-06-loadIntoDb.ts",
        "patch": "ts-node -r dotenv-json2/config ./bin/data-07-patchIntoDb.ts"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/RonPenton/generalmud.git"
    },
    "keywords": [
        "MUD"
    ],
    "author": "Ron Penton",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/RonPenton/generalmud/issues"
    },
    "homepage": "https://github.com/RonPenton/generalmud#readme",
    "devDependencies": {
        "@babel/core": "^7.26.0",
        "@babel/preset-env": "^7.26.0",
        "@babel/preset-typescript": "^7.26.0",
        "@types/bcryptjs": "^2.4.6",
        "@types/clone": "^2.1.4",
        "@types/clone-deep": "^4.0.4",
        "@types/connect-flash": "^0.0.40",
        "@types/connect-pg-simple": "^7.0.3",
        "@types/cookie-parser": "^1.4.7",
        "@types/deep-freeze": "^0.1.5",
        "@types/express": "^5.0.0",
        "@types/express-session": "^1.18.0",
        "@types/jest": "^29.5.14",
        "@types/lossless-json": "^1.0.4",
        "@types/morgan": "^1.9.9",
        "@types/node": "^22.10.5",
        "@types/passport": "^1.0.17",
        "@types/passport-local": "^1.0.38",
        "@types/react": "^18.3.12",
        "@types/react-dom": "^18.3.1",
        "babel-jest": "^29.7.0",
        "copyfiles": "^2.4.1",
        "cross-env": "^7.0.3",
        "css-loader": "^7.1.2",
        "jest": "^29.7.0",
        "mini-css-extract-plugin": "^2.9.2",
        "nodemon": "^3.1.7",
        "npm-run-all": "^4.1.5",
        "rimraf": "^6.0.1",
        "sass": "^1.80.6",
        "sass-loader": "^16.0.3",
        "ts-jest": "^29.2.5",
        "ts-loader": "^9.5.1",
        "ts-node": "^10.9.2",
        "tsconfig-paths-webpack-plugin": "^4.1.0",
        "tsx": "^4.19.2",
        "typescript": "^5.7.2",
        "webpack": "^5.96.1",
        "webpack-cli": "^5.1.4",
        "webpack-dev-middleware": "^7.4.2",
        "webpack-hot-middleware": "^2.26.1"
    },
